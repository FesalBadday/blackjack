<!DOCTYPE html>
<html lang="en">


<head>
  <%- include('partials/header') %>
    <title>Sign Up</title>
</head>


<body>
  <header>
    <!--Global Navigation-->
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="login">Login</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <!--Form with POST JS-->
    <div>
      <form action="/register" method="POST">
        <h1>Sign Up</h1>
        <% if(locals.errorMessage){ %>
          <p class="err-msg">
            <%= errorMessage %>
          </p>
          <% } %>
            <fieldset>
              <legend>Name</legend>
              <input class="input-box" type="name" name="name" required>
            </fieldset>
            <fieldset>
              <legend>Password</legend>
              <input class="input-box" type="password" name="password" required>
            </fieldset>

            <!--Submit button-->
            <button class="submit-button" type="submit"><strong>Sign Up</strong></button>
      </form>
    </div>
  </main>
</body>

</html>